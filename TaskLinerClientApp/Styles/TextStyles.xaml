<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TaskLinerClientApp">

    <!-- Стиль шрифта текста -->
    <Style x:Key="font_style_white" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Helvetica"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="font_style_black" TargetType="TextBlock" BasedOn="{StaticResource font_style_white}">
        <Setter Property="Foreground" Value="DimGray"/>
    </Style>
    <Style x:Key="font_style_black_undertext" TargetType="TextBlock" BasedOn="{StaticResource font_style_black}">
        <Setter Property="FontSize" Value="14"/>
    </Style>
</ResourceDictionary>